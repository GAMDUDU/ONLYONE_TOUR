-- drop table travel_review_trip;
-- drop table travel_trip;
-- drop table hotel_review_trip;
-- drop table hotel_trip;

-- 패키지 상품 테이블
create table travel_trip (
    travel_num number(5) primary key,               -- 패키지 번호
    travel_name varchar2(200) not null,             -- 패키지 이름
    travel_price number(20) not null,               -- 패키지 가격
    travel_calender varchar2(100) not null,         -- 패키지 일정
    travel_cont varchar2(3000),                     -- 패키지 상세정보
    travel_spec varchar2(50) not null,              -- 패키지 스펙(일반, 신규, 인기, 추천)
    travel_air varchar2(50),                        -- 항공사
    travel_room varchar2(2000) not null,            -- 숙박
    travel_image varchar2(500) not null,            -- 패키지 이미지
    travel_departure_airport varchar2(50),          -- 출발공항
    travel_arrival_airport varchar2(50),            -- 도착공항
    travel_departure_date varchar2(100),            -- 출국시간
    travel_return_date varchar2(100),               -- 귀국시간
    travel_meeting_time varchar2(50),               -- 미팅일시
    travel_meeting_loc varchar2(200),               -- 미팅장소
    travel_reserve_count number(5) default 0        -- 예약현황
);

-- 숙박 상품 테이블
create table hotel_trip (
    hotel_num number(5) primary key,       -- 숙소 번호
    hotel_hname varchar2(100) not null,    -- 숙소 한글이름
    hotel_ename varchar2(100) not null,    -- 숙소 영어이름
    hotel_country varchar2(10) not null,   -- 국내, 해외
    hotel_room1 varchar2(100) not null,    -- 객실 1
    hotel_room2 varchar2(100),             -- 객실 2
    hotel_room3 varchar2(100),             -- 객실 3
    hotel_price1 number(20) not null,      -- 객실 1 가격(1박)
    hotel_price2 number(20),               -- 객실 2 가격(1박)
    hotel_price3 number(20),               -- 객실 3 가격(1박)
    hotel_loc varchar2(100) not null,      -- 숙소 위치
    hotel_chkin varchar2(10),              -- 체크인 시간
    hotel_chkout varchar2(10),             -- 체크아웃 시간
    hotel_phone varchar2(20),              -- 숙소 전화번호
    hotel_image varchar2(500) not null,    -- 숙소 이미지
    hotel_exp varchar2(3000),               -- 숙소 설명
    hotel_add varchar2(3000)                -- 편의/부대시설
);

-- 패키지 리뷰 테이블
create table travel_review_trip (
    treview_num number(5) primary key,      -- 패키지 리뷰 번호
    travel_num_fk number(5) not null,       -- 패키지 번호(외래키)
    treview_score number(5) not null,      -- 패키지 평점
    treview_comm varchar2(500) not null,    -- 리뷰 내용
    treview_date varchar2(30) not null,     -- 리뷰 날짜
    CONSTRAINT tnum_fk FOREIGN KEY(travel_num_fk) REFERENCES travel_trip(travel_num) ON DELETE CASCADE 
);

-- 숙소 리뷰 테이블
create table hotel_review_trip (
    hreview_num number(5) primary key,      -- 숙소 리뷰 번호
    hotel_num_fk number(5) not null,        -- 숙소 번호(외래키)
    hreview_score number(5) not null,      -- 숙소 평점
    hreview_comm varchar2(500) not null,    -- 리뷰 내용
    hreview_date varchar2(30) not null,     -- 리뷰 날짜
    CONSTRAINT hnum_fk FOREIGN KEY(hotel_num_fk) REFERENCES hotel_trip(hotel_num) ON DELETE CASCADE 
);

